page {
    background-color: #f5f5f5;
}

.messages {
    padding: 0 10rpx;
}

.messages ::-webkit-scrollbar {
    width: 1px;
}

.fix-bottom.contact {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70rpx;
    padding: 0 20rpx;
}

.doctor {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #1b67ff;
    padding: 25px 10px 25px 10px;
}

.doctor image {
    display: block;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    margin-right: 10px;
}

.base-info {
    flex: 1;
    display: block;
}

.base-info text {
    display: block;
    color: #fff;
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 5px;
}

.base-info .profession {
    display: inline-block;
    font-size: 28rpx;
    font-weight: normal;
}

.base-info .hospital {
    font-size: 32rpx;
    font-weight: normal;
}

.btn-group button {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 26rpx;
    width: 110rpx;
    height: 52rpx;
    border: 1px solid #fff;
    border-radius: 3px;
    margin-bottom: 5px;
}

.btn-group image {
    display: block;
    width: 15px;
    height: 15px;
    margin-right: 1px;
}

.time {
    display: block;
    background-color: #1a61f0;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    padding: 10px 0;
}

.fix-bottom {
    background-color: #fff;
}

.fix-bottom.contact input {
    font-size: 30rpx;
    color: #555;
    flex: 1;
}

.fix-bottom.contact .enter-btn {
    width: 17px;
    height: 12px;
}

.fix-bottom.complete {
    background-color: #f5f5f5;
}

.fix-bottom.complete button, .fix-bottom.complete navigator {
    font-size: 32rpx;
    color: #a3acbf;
    padding: 10px 0;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    max-width: 660rpx;
    margin: 10px auto;
}

.fix-bottom.complete button text, .fix-bottom.complete navigator text {
    color: #ff4f29;
    font-size: 28rpx;
}

.fix-bottom.complete button image {
    width: 63rpx;
    height: 51rpx;
    margin-right: 15px;
}
