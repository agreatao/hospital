page {
    background-color: #f5f5f5;
}

.record-container {
    padding-bottom: 42px;
}

.doctor {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #1B67FF;
    padding: 25px 10px 25px 10px;
}

.doctor image {
    display: block;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    margin-right: 10px;
}

.base-info {
    flex: 1;
    display: block;
}

.base-info text {
    display: block;
    color: #fff;
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 5px;
}

.base-info .profession {
    display: inline-block;
    font-size: 28rpx;
    font-weight: normal;
}

.base-info .hospital {
    font-size: 32rpx;
    font-weight: normal;
}

.btn-group button {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 26rpx;
    width: 110rpx;
    height: 52rpx;
    border: 1px solid #fff;
    border-radius: 3px;
    margin-bottom: 5px;
}

.btn-group image {
    display: block;
    width: 15px;
    height: 15px;
    margin-right: 1px;
}

.time {
    display: block;
    background-color: #1A61F0;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    padding: 10px 0;
}

.export {
    padding: 10px 0;
    font-size: 32rpx;
    color: #ff4f29;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.export image {
    width: 63rpx;
    height: 51rpx;
    margin-right: 15px;
}

.content {
    padding: 0 10px;
}
