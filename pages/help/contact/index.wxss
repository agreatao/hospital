page {
  background-color: #f5f5f5;
}

.contact {
  padding-bottom: 70rpx;
}

.doctor {
  background-color: #1B67FF;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px;
}

.doctor image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 15px;
}

.info {
  flex: 1;
  color: #fff;
  font-size: 48rpx;
}

.info text {
  display: block;
  margin-top: 5px;
}

.info text text {
  display: inline-block;
  font-size: 32rpx;
  margin-left: 15px;
}

.hospital {
  font-size: 32rpx;
}

.btns button {
  border: 1px solid #fff;
  font-size: 25rpx;
  padding: 0 10px;
  color: #fff;
  margin-bottom: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: transparent;
}

.btns button image {
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-right: 2px;
}

.time {
  display: block;
  color: #f5f5f5;
  font-size: 32rpx;
  padding: 10px 0;
  background-color: #1A61F0;
  text-align: center;
}

.fix-bottom {
  background-color: #f5f5f5;
}

.fix-bottom input {
  padding: 10px;
  font-size: 32rpx;
  color: #555;
}

.fix-bottom .pl {
  color: #D2D2D2;
}

.fix-bottom button {
  font-size: 32rpx;
  color: #A3ACBF;
  padding: 5px 10px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.fix-bottom button text {
  color: #FF4F29;
}

.fix-bottom button image {
  width: 63rpx;
  height: 51rpx;
  margin-right: 15px;
}