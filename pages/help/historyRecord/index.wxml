<scroll-view class="record-container">
  <view class="doctor">
    <image src="{{obj['头像']}}" />
    <view class="info">
      <text>{{obj['姓名']}}<text>{{obj['职称']}}     {{obj['科室']}}</text></text>
      <text class="hospital">{{obj['机构']}}</text>
    </view>
    <view class="btns">
      <follow empid="{{obj['医生ID']}}" image="/assets/doctor/plus-white.png" />
      <button><image src="/assets/doctor/share-white.png" />分享</button>
    </view>
  </view>
  <text class="time">咨询到期时间：{{obj['结束时间']}}</text>
  <view class="content">
    <message list-data="{{list}}" />
  </view>
</scroll-view>
<view class="fix-bottom">
  <button class="export" hover-class="none"><image src="/assets/help/export.png" />导出此咨询记录</button>
</view>