.doctor {
  display: flex;
  flex-direction: column;
  background-color: #F4F6F9;
  margin-bottom: 50rpx;
  padding: 25rpx;
  border-radius: 8rpx;
  position: relative;
}

.info {
  display: flex;
  flex-direction: row;
  padding-bottom: 10px;
  border-bottom: 1px solid #EFEFEF;
}

.info image {
  width: 75px;
  height: 90px;
}

.text-info {
  margin-left: 15px;
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-top: 5px;
}

.text-info .name {
  font-size: 20px;
  font-weight: 600;
  color: #222529;
  margin-bottom: 15px;
}

.text-info .base {
  font-size: 28rpx;
  color: #55585D;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 5px;
}

.base .right {
  color: #868FA0;
}

.base .right text {
  color: #FF4F29;
}

.major {
  font-size: 30rpx;
  color: #A3ACBF;
  padding-top: 10px;
}